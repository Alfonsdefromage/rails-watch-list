<%= render 'share/navbar' %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.stilldrinking.org/blog_images/the-search-for-the-hitchhiker-s-guide-as-read-by-stephen-moore.jpg);">
  <div class="container">
    <h1>Movies <strong>are</strong> very <strong>cool</strong>!</h1>
    <p>Have a look at the suggested movie lists below.</p>
  </div>
</div>


<div class="container">

  <h1> All Lists </h1>

  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : image_path('https://variety.com/wp-content/uploads/2019/10/jay-and-silent-bob-reboot.jpg') %>)">
      <%= list.name %>
      <%= link_to " ", list_path(list), class: "card-link"  %>
    </div>
  <%end%>
</div>
